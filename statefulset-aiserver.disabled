## StatefulSet
apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: aiserver
  labels:
    app.kubernetes.io/name: aiserver
spec:
  selector:
    matchLabels:
      app.kubernetes.io/name: aiserver
  serviceName: aiserver
  affinity:
    podAntiAffinity:
      preferredDuringSchedulingIgnoredDuringExecution:
      - weight: 100
        podAffinityTerm:
          labelSelector:
           matchExpressions:
            - key: <label-key>
              operator: In
              values:
              - <label-value>
          topologyKey: kubernetes.io/hostname
  replicas: 2
  template:
    metadata:
      labels:
        app.kubernetes.io/name: aiserver
    spec:
      containers:
        - name: ai-server 
          image: codeproject/ai-server:2.9.5
          imagePullPolicy: Always
          env:
          - name: TZ
            value: "America/Detroit"
          securityContext:
            privileged: true
          resources:
            requests:
              memory: "2Gi"
              cpu: "2000m"
            limits:
              memory: "4Gi"
              cpu: "2000m"
              gpu.intel.com/i915: 1
          ports:
          - name: "http-32168"
            containerPort: 32168
          volumeMounts:
          - name: config
            mountPath: "/etc/codeproject/ai"
          - name: modules
            mountPath: "/app/modules"
          readinessProbe:
            httpGet:
              path: /
              port: http-32168
          livenessProbe:
            httpGet:
              path: /
              port: http-32168
  volumeClaimTemplates:
  - metadata:
      name: config
    spec:
      accessModes: [ "ReadWriteOnce" ]
      storageClassName: longhorn-perpetual
      resources:
        requests:
          storage: 4Gi
  - metadata:
      name: modules
    spec:
      accessModes: [ "ReadWriteOnce" ]
      storageClassName: longhorn-perpetual
      resources:
        requests:
          storage: 16Gi
---

